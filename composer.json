{
    "name": "jeromejhipolito/laravel-saga",
    "description": "Laravel package for Saga transaction pattern - manage distributed transactions with automatic rollback support",
    "keywords": ["laravel", "saga", "transaction", "distributed", "rollback", "orchestration"],
    "license": "MIT",
    "authors": [
        {
            "name": "Jerome Hipolito",
            "email": "jerome@betrnk-junket.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "illuminate/support": "^11.0|^12.0",
        "illuminate/database": "^11.0|^12.0"
    },
    "require-dev": {
        "orchestra/testbench": "^9.0|^10.0",
        "pestphp/pest": "^3.0",
        "pestphp/pest-plugin-laravel": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "JeromeJHipolito\\Saga\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "JeromeJHipolito\\Saga\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "JeromeJHipolito\\Saga\\SagaServiceProvider"
            ]
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
